{{#paper-dialog class="modal-dialog" fullscreen=fullscreen onClose=(action "cancel") origin=dialogOrigin}}

    {{#paper-dialog-content}}
      <h2 class="md-title">{{device.name}}</h2>
      <p>{{device.os}} - {{device.osVersion}}</p>
      <div class="layout-column layout-align-center-stretch">
        {{#paper-select options=teams required=true label="Teams" selected=team onChange=(action (mut team)) as |team|}}
          {{team.name}}
        {{/paper-select}}
        {{#paper-select options=team.members required=true label="Members" selected=member onChange=(action (mut member)) as |member|}}
          {{member}}
        {{/paper-select}}
      </div>
    {{/paper-dialog-content}}

    {{#paper-dialog-actions class="layout-row"}}
      <span class="flex"></span>
      {{#paper-button primary=true disabled=bookingIsDisabled onClick=(action "confirm" member)}}Book!{{/paper-button}}
      {{#paper-button primary=true onClick=(action "cancel")}}Cancel{{/paper-button}}
    {{/paper-dialog-actions}}

  {{/paper-dialog}}
